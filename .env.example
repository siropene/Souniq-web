# Configuración de Variables de Entorno para SouniQ Web
# Copiar este archivo como .env y configurar los valores apropiados

# Configuración de Django
SECRET_KEY=django-insecure-cambiar-por-clave-secreta-en-produccion
DEBUG=True
ALLOWED_HOSTS=localhost,127.0.0.1

# Configuración de Base de Datos (SQLite por defecto)
# Para PostgreSQL en producción:
# DATABASE_URL=postgresql://usuario:password@localhost:5432/souniq_web

# Configuración de Redis
REDIS_URL=redis://localhost:6379/0

# Hugging Face - Espacios Públicos (NO requiere token)
# La separación de stems utiliza espacios públicos sin autenticación

# Configuración de Email (Opcional)
EMAIL_BACKEND=django.core.mail.backends.console.EmailBackend
# Para producción con SMTP:
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=SouniQ.demo@gmail.com
EMAIL_HOST_PASSWORD=SouniQ2025.

# Configuración de Archivos Medias
MAX_UPLOAD_SIZE=104857600  # 100MB en bytes

# Configuración de Celery
CELERY_BROKER_URL=redis://localhost:6379/0
CELERY_RESULT_BACKEND=redis://localhost:6379/0

# Configuración de Logging
LOG_LEVEL=INFO

# Configuración de APIs Externas
API_TIMEOUT=300  # 5 minutos
MAX_RETRIES=3

# Configuración de Seguridad (Solo para Producción)
# SECURE_SSL_REDIRECT=True
# SECURE_HSTS_SECONDS=31536000
# SECURE_HSTS_INCLUDE_SUBDOMAINS=True
# SECURE_HSTS_PRELOAD=True
